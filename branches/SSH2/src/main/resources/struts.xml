<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<constant name="struts.custom.i18n.resources" value="mess" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.devMode" value="true"/>
	<package name="action" extends="struts-default">
		<interceptors>
			<interceptor name="authority" class="framework.AuthorityInterceptor">
				<!-- 注意这里的excute是为了不拦截访问login.jsp和ajaxLogin.jsp的方法! -->
				<param name="excludeMethods">execute,login,ajaxLogin</param>
			</interceptor>
			<interceptor-stack name="myDefaultAuthority">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="authority"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<!-- 
			<default-interceptor-ref name="myDefaultAuthority"></default-interceptor-ref> 
		
			
			<global-results>
				<result name="fail">/WEB-INF/JSP/fail.jsp</result>
				<result name="login">/WEB-INF/JSP/login.jsp</result>
			</global-results>
		
		<global-exception-mappings>
			<exception-mapping result="fail" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		-->	
		<action name="login" class="action.LoginAction" method="login">
			<result name="success">/message/message_query.jsp</result>
			<result name="error">/WEB-INF/JSP/error.jsp</result>
		</action>
		
		<action name="message_*" class="action.MessageAction" method="message_{1}">
			<result name="query_success">/message/message_query.jsp</result>
			<result name="page_success" >/message/message_query.jsp</result>
			<result name="insert_success" type="chain">message_query</result>
			<result name="update_success" type="chain">message_query</result>
			<result name="selectOne_success">/message/message_update.jsp</result>
			<result name="delete_success" type="chain">message_query</result>
		</action>
		
		<!-- 
			<action name="*">
				<result>/WEB-INF/JSP/{1}.jsp</result>
			</action>
		-->
	</package>
</struts>